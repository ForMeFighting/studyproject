<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chai.eduservice.mapper.EduTeacherMapper">
    <resultMap id="baseMap" type="com.chai.eduservice.entity.po.EduTeacher">
        <result column="id" jdbcType="VARCHAR" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="intro" jdbcType="VARCHAR" property="intro" />
        <result column="career" jdbcType="VARCHAR" property="career" />
        <result column="level" jdbcType="DECIMAL" property="level" />
        <result column="avatar" jdbcType="VARCHAR" property="avatar" />
        <result column="sort" jdbcType="DECIMAL" property="sort" />
        <result column="is_deleted" jdbcType="VARCHAR" property="isDeleted" />
        <result column="gmt_create" jdbcType="TIMESTAMP" property="gmtCreate" />
        <result column="gmt_modified" jdbcType="TIMESTAMP" property="gmtModified" />
    </resultMap>
    <select id="getTeacherByPage" resultMap="baseMap">
        select * from edu_teacher
        <where>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="level != null and level != ''">
                and level = #{level}
            </if>
        </where>
    </select>
</mapper>
